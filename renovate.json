{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:base",
    ":semanticPrefixFixDepsChoreOthers",
    ":ignoreModulesAndTests",
    ":autodetectPinVersions",
    "group:recommended",
    "workarounds:all",
    "github>whitesource/merge-confidence:beta"
  ],
  "lockFileMaintenance": {
    "enabled": true,
    "automerge": true,
    "automergeType": "pr",
    "platformAutomerge": true
  },
  "semanticCommits": "enabled",
  "vulnerabilityAlerts": {
    "enabled": true,
    "labels": [
      "vulnerability",
      "security"
    ]
  },
  "packageRules": [
    {
      "matchManagers": [
        "pep621"
      ],
      "labels": [
        "renovate",
        "python"
      ],
      "patch": {
        "enabled": false
      }
    }
  ],
  "automerge": true
}
